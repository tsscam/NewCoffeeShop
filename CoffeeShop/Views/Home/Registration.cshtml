@model CoffeeShop.BundleConfig

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Please fill the form to Register</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              
                    <form action="/action_page.php">
                        First name: <input type="text" name="FirstName"><br>
                        Last name: <input type="text" name="LastName"><br>
                        Email: <input type="text" name="FirstName" <br>
                        Phone Number: <input type="text" name="LastName" <br>
                        Password: <input type="password" name="FirstName" <br>

                        @*<input type="submit" value="Register">*@
                    </form>
                    <p>Click the "Submit" button and the form-data will be sent to a page on the server called "/action_page.php".</p>
            
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
